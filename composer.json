{
    "name": "towoju5/localpayments",
    "description": "Localpayment offers a fully localized payments solution that connects you with several local payment methods in many countries in emerging markets.",
    "keywords": [
        "towoju5",
        "localpayments"
    ],
    "homepage": "https://github.com/towoju5/localpayments",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "EMMANUEL TOWOJU",
            "email": "towojuads@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "files": [
            "src/helper.php"
        ],
        "psr-4": {
            "Towoju5\\Localpayments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Towoju5\\Localpayments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
